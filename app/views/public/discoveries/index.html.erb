<h4>みんなの発見</h4>
<div class="container">
  <div class="row">
  <% @discoveries.each do |discovery| %>
  <div class="card col-12 col-md-4">
    <div class="card-body">
      <h5 class="card-title"><%= link_to discovery.title, public_discovery_path(discovery.id) %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">説明：<%= discovery.explanation %></li>
      <li class="list-group-item">全体画像：<%= image_tag discovery.get_image(250,250, discovery.image1) %></li>
      <li class="list-group-item">注目ポイント：<%= image_tag discovery.get_image(250,250, discovery.image2) %></li>
      <li class="list-group-item">ジャンル名：<%= discovery.genre.genre_name %></li>
    </ul>
  </div>
  <% end %>
  </div>
</div>
