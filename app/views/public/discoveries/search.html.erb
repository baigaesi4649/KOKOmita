<table class="table table-hover table-inverse">

<% if @range == "member" %>
  <h4 class="text-center mt-3 ">会員情報</h4>
  <% @members.each do |member| %>
  <div class="card col border-dark text-center">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">ユーザー名</br><%= member.user_name %></li>
      <li class="list-group-item">発見件数</br><%= member.discoveries.count %></li>
      <li class="list-group-item">レビュー件数</br><%= member.reviews.count %></li>
      <li class="list-group-item">レビュー平均評価</br><%= member.reviews.average(:review_score) %></li>
    </ul>
    <%end%>
  </div>
<% else %>
  <h4 class="text-center mt-3 ">発見詳細</h4>
  <div class="container center">
    <div class="row">
    <% @discoveries.each do |discovery| %>
      <div class="card col-12 col-md-5 text-center border-dark m-4">
        <div class="card-body">
          <h5 class="card-title"><%= link_to discovery.title, public_discovery_path(discovery.id) %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">説明</br><%= discovery.explanation %></li>
          <li class="list-group-item">全体画像</br><%= image_tag discovery.get_image(250,250, discovery.image1) %></li>
          <li class="list-group-item">ココ見た</br><%= image_tag discovery.get_image(250,250, discovery.image2) %></li>
          <li class="list-group-item">ジャンル名</br><%= discovery.genre.genre_name %></li>
        </ul>
      </div>
    <% end %>
    </div>
  </div>
<% end %>