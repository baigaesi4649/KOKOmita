<div class="container mt-3">
  <div class="row">
    <div class="col-6">
      <div class=" border border-dark text-center">
      <h2>新規登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%#= render "publics/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード再確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規登録",class: "mx-auto d-block mt-4 mb-5 p-3" %>
        </div>
      <% end %>
      </div>
    </div>
    
    <div class="col-6">
      <div class=" border border-dark text-center">
      <h2>ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン",class: "mx-auto d-block m-5 p-3" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
  
  <div class="border border-dark text-center" style="width: 30%; margin: 40px auto">
    <%= link_to 'ゲストログイン', public_guest_sign_in_path, method: :post %>
  </div>
</div>
