<div class="container">
  <div class="row">
    <div class="col-md-5 col-12 text-center">
      <%= form_with model: @discovery, url:  public_my_pages_renew_path(@discovery.id), method: :patch do |f| %>
      <h4>アップデート</h4>
      <div class="card col border-dark">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">題名</br><%= f.text_field :title %></li>
          <li class="list-group-item">説明</br><%= f.text_area :explanation %></li>
          <li class="list-group-item">全体画像</br><%= f.file_field :image1, accept: "image/*" %></li>
          <li class="list-group-item">ココ見た</br><%= f.file_field :image2, accept: "image/*" %></li>
          <li class="list-group-item">ジャンル名</br><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></li>
          <li class="list-group-item">
            <%= f.submit '更新',class: "button mr-3"%>
            <%= link_to "削除",  public_my_pages_delete_path(@discovery.id),method: :delete,class: "btn btn-light" %>
          </li>
        </ul>
      </div>
      <% end %>

      <h4>発見詳細</h4>
      <div class="card col border-dark">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">題名</br><%= @discovery.title %></li>
          <li class="list-group-item">説明</br><%= @discovery.explanation %></li>
          <li class="list-group-item">全体画像</br><%= image_tag @discovery.get_image(300,300, @discovery.image1) %></li>
          <li class="list-group-item">ココ見た</br><%= image_tag  @discovery.get_image(300,300, @discovery.image2)%></li>
          <li class="list-group-item">ジャンル名</br><%= @discovery.genre.genre_name %></li>
        </ul>
      </div>
    </div>

    <div class="col-md-5 col-12 text-center">
      <h4>みんなのレビュー・コメント</h4>
      <% @reviews.each do |review| %>
      <div class="card col m-2 border-dark">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">ユーザー名</br><%= review.member.user_name %></li>
          <li class="list-group-item">レビュー</br><%= review.review_score %></li>
          <li class="list-group-item">コメント</br><%= review.comment %></li>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
</div>