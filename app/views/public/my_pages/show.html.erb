アップデート
<%= form_with model: @discovery, url:  public_my_pages_renew_path(@discovery.id), method: :patch do |f| %>
<table class="table">
 <tbody>
  <tr>
   <td>題名</td>
   <td><%= f.text_field :title %></td>
  </tr>
  <tr>
   <td>説明</td>
   <td><%= f.text_area :explanation %></td>
  </tr>
  <tr>
   <td>画像１(左下）</td>
   <td><%= f.file_field :image1, accept: "image/*" %></td>
  </tr>
  <tr>
   <td>画像２(右上）</td>
   <td><%= f.file_field :image2, accept: "image/*" %></td>
  </tr>
  <tr>
   <td>ジャンル名</td>
   <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></td>
  </tr>
 </tbody>
 </table>
  <%= f.submit '更新',class: "btn btn btn-success btn-sm"%>
  <%= link_to "削除",  public_my_pages_delete_path(current_member.id),method: :delete,class: "btn btn-danger btn-sm" %>
<% end %>

